@model SalaryWithAttend_Emp_GenSettingsVM

@{
    ViewData["Title"] = "EmpolyeeSalaryReport";
}

 <div class="main-panel">
        <div class="main-content">
          <div class="content-wrapper">
            <div class="container-fluid">
                <section class="invoice-template">
                    <div class="card">
                        <div class="card-body p-3">
                            <div id="invoice-template" class="card-block">
                                <!-- Invoice Company Details -->
                                <div id="invoice-company-details" class="row">
                                    <div class="col-6 text-left">
                                        <img src="~/app-assets/img/logo.png" alt="company logo" class="mb-2" width="70">
                                        <ul class="px-0 list-unstyled">
                                            <li class="text-bold-800">Pioneer Solutions Company </li>
                                            <li>Cairo,</li>
                                            <li>Naser City ,</li>
                                            <li>102 Makrim Ebid,</li>
                                           
                                        </ul>
                                    </div>
                                    <div class="col-6 text-right">
                                        <h2>INVOICE</h2>
                                        <p class="pb-3"># INV-001001</p>
                                        <ul class="px-0 list-unstyled">
                                            <li>Balance Due</li>
                                            <li class="lead text-bold-800">2100 $</li>
                                        </ul>
                                    </div>
                                </div>
                     
                                <!--/ Invoice Customer Details -->
                                <!-- Invoice Items Details -->
                                <div id="invoice-items-details" class="pt-2">
                                    <div class="row">
                                      <table class="table table-striped table-bordered zero-configuration mt-40">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Employee Name</th>
                                                <th>Phone</th>
                                                <th>Salary</th>
                                                <th>Attendance days</th>
                                                <th>Absent days</th>
                                                <th>Overtime hours</th>
                                                <th> Discount hours</th>
                                                <th>Extra</th>
                                                <th>discount</th>
                                                <th>Total</th>
                                     
                                            </tr>
                                        </thead>
                                        <tbody> 
                                            <tr>
                                                 <td>@Model.EmployeeIdVM</td>
                                                <td> @Model.EmployeeNameVM</td>
                                                <td> @Model.EmpolyeeContactNumberVM</td>
                                                <td> @Model.MonthSalaryBeforeOperations </td>
                                                <td> @Model.AttendanceDaysVM</td>
                                                <td> @Model.AbsenceeDaysVM </td>
                                                 <td>@Model.TotalMoneyAdded</td>
                                                <td>@Model.TotalMoneyDeducted</td>
                                                <td>@Model.OverTimePricePerHour </td>
                                                <td> @Model.DeductionPricePerHour </td>
                                               <td>@Model.MonthSalaryAfterOperations</td>

                                            </tr>                                                                                                                                                                                         
                                        </tbody>
                                        </table>
                                        </div>
                                        </div>
                            
