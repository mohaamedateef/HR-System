@model SearchAttendanceViewModel
@{
    ViewData["Title"] = "Index";
}
                <form asp-action="Search" method="post">
<input hidden value="@ViewBag.Errors" id="errors"/>
<div class="card">
    <div class="card-header">
        <div class="card-title-wrap bar-success d-flex align-items-center justify-content-between">
            <h4 class="card-title col-7">Attendance and departure request</h4>
            <div class="col-5">
                <input asp-for="Name" class="form-control" placeholder="Enter employee name or department">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
    </div>
    <div class="card-body collapse show">
        <div class="card-block card-dashboard">
                <div class="row">
                    
                    <div class="col-md-8 mb-4 d-flex align-items-center">
                       <label class="label-control ms-2">From:</label>
                       <input asp-for="StartDate" class="form-control col-5"/>
                       <span class="text-danger" asp-validation-for="StartDate"></span>
                       <label class="label-control">To:</label>
                       <input asp-for="EndDate" class="form-control col-5"/>
                       <div class="col-1">
                            <button type="submit" class="m-0 btn btn-primary ms-2">Search</button>
                        </div>                    
                   </div>
                   </form>
                    
                    <div class="col-sm-12 col-md-6">
                        <form asp-action="AddFile" method="post" enctype="multipart/form-data">
                            <div class="d-flex ms-5">
                                <input type="file" name="file" id="import_file" class="form-control mb-1 me-2">
                                <button onclick="checkValidation()" type="submit" class="btn btn-primary ps-1 me-2 ms-2">Import</button>
                                <button type="button" class="btn btn-warning ms-2 me-2">Export</button>
                            </div>
                            <span style="display:none;" id="filevalidation" class="text-danger ms-5" >Please choose file with this formats(.xls,.xlsx)</span>
                            @if(ViewBag.status==1){
                            <span  class="text-danger ms-5" >Please choose file with this formats(.xls,.xlsx)</span>
                            }
                        </form>
                    </div>                              
                </div> 
            <table class="table table-striped table-bordered zero-configuration mt-40">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Date </th>
                        <th>Attendance Time</th>
                        <th>Check Out Time</th>
                        <th>Delete</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Attendance in ViewBag.EmployeeAttendances)
                    {
                        <tr>
                            <td>@Attendance.AttendanceId</td>
                            <td>@Attendance.EmployeeName</td>
                            <td>@Attendance.Date.ToShortDateString()</td>
                            <td>@Attendance.CheckInTime</td>
                            <th>@Attendance.CheckOutTime</th>
                            <th>
                               <a type="button" class="btn btn-danger mr-1" asp-action="DeleteAttendance" asp-route-id="@Attendance.AttendanceId" onclick="DeleteAlert()">
                                    <i class="icon-trash"></i> Delete
                               </a>
                            </th>
                            <th>
                               <a type="button" class="btn btn-primary mr-1" asp-action="Edit" asp-route-id="@Attendance.AttendanceId">
                                    <i class="icon-note"></i> Edit
                               </a>
                            </th>
                        </tr>
                    }

                                                                                                                                                                                                                                                        </yr>
                </tbody>
                
            </table>
        </div>
    </div>
    <div class="card-header">
        <div class="card-title-wrap bar-success">
            <h4 class="card-title">Request A Form</h4>
        </div>
    </div>
    <div class="card-body">
    <div class="px-3">
    <form class="form form-horizontal">
    <div class="form-body">
              
        <div class="form-group row">
        <label class="col-md-3 label-control" for="projectinput7">Employee Name : </label>
        <div class="col-md-9">
            <select id="projectinput7" name="budget" class="form-control">
            <option value="0" selected="" disabled="">Tasneem Saleh</option>
            <option value="leman">Eman Ahmed</option>
            <option value="amany">Amany Gamal</option>
            
            </select>
        </div>
        </div>
  
                 
  
               
        <div class="form-group row">
        <label class="col-md-3 label-control" for="projectinput9">Date: </label>
        <div class="col-md-9">
            <div class="position-relative has-icon-left">
            <input type="date" id="timesheetinput3" class="form-control" name="date">
            <div class="form-control-position">
                <i class="ft-message-square"></i>
            </div>
            </div>
            </div>
            </div>
        </div>
          
               
        <div class=" row">
        <div class="col-md-12">
            <div class=" row form-group">
            <label class="col-md-3 label-control">Start time: </label>
            <div class="position-relative has-icon-left col-lg-9">
                <input type="time" id="timesheetinput5" class="form-control" name="starttime">
                <div class="form-control-position">
                <i class="ft-clock"></i>
                </div>
            </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class=" row form-group">
            <label class="col-md-3 label-control">End time: </label>
            <div class="position-relative has-icon-left col-lg-9">
                <input type="time" id="timesheetinput6" class="form-control" name="endtime">
                <div class="form-control-position">
                <i class="ft-clock"></i>
                </div>
            </div>
            </div>
        </div>
        </div>
  
  
    <div class="form-actions">
        <button type="button" class="btn btn-danger mr-1">
        <i class="icon-trash"></i> Cancel
        </button>
        <button type="button" class="btn btn-success">
        <i class="icon-note"></i> Save
        </button>
    </div>              
             
    </form>
    </div>
    </div>

</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        var errors = $("#errors").val();
        console.log(errors);
        if(errors != ''){
            alert(errors);
        }
        function DeleteAlert(){
            if(!confirm("Are you sure?")){
                event.preventDefault();
            }
        }
function checkValidation() {
        var import_file = document.getElementById("import_file");
        var span = document.getElementById("filevalidation");
      
    if (import_file.value == '') {
        event.preventDefault();
        span.style.display = 'inline'
    }
    else {
        span.style.display = 'none'

    }
}
    </script>
}