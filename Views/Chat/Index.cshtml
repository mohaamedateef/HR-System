@model List<UsersChatViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="chatroom d-flex">
        <div class="left-side col-4 pt-3 p-2" style="background-color:white;">
            <div class="search mb-3 pb-2 border-bottom">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search"
                        aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
            </div>
            <div class="members-container">
               @foreach (UsersChatViewModel User in Model)
               {
                    <div class="member pb-3 p-2 border-bottom">
                        <div class="content d-flex align-items-center">
                            <img src="~/images/ChatImages/WhatsApp Image 2022-08-01 at 8.13.54 PM.jpeg" alt="">
                            <p>@User.Name</p>
                        </div>
                    </div>
               } 
            </div>
        </div>
        <div class="right-side col-8">
            <div class="chatheader p-3" style="background-color: white;">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="content custom d-flex align-items-center">
                        <img src="~/images/ChatImages/WhatsApp Image 2022-08-01 at 8.13.54 PM.jpeg" alt="">
                        <div>
                            <p>Muhammed A.abdelrazek</p>
                            <p style="color:#3ed73e;">Online</p>
                        </div>
                    </div>
                    <i class='fas fa-ellipsis-v fs-4'></i>
                </div>
            </div>
            <div class="messages-container position-relative p-4">
                <div class=" d-flex justify-content-center">
                    <p class="fixed chat-history py-1 px-3 rounded text-white bg-black fw-bold ">Chat History</p>
                </div>
                <div class="message d-flex align-items-center justify-content-end">
                    <p class="message-shape me-3 bg-primary text-white p-2">How Can we help? We're here for you!</p>
                    <i class="text-primary fa-solid right-arrow fa-caret-right"></i>
                    <img class="ms-2" src="~/images/ChatImages/WhatsApp Image 2022-08-01 at 8.13.54 PM.jpeg" alt="">
                </div>
                <div class="message d-flex align-items-center justify-content-end">
                    <p class="message-shape me-3 bg-primary text-white p-2">Lorem ipsum dolor sit, amet consectetur
                        adipisicing elit. Amet alias, doloremque, perspiciatis porro molestias, itaque quidem voluptatem
                        in corrupti quo officiis officia eligendi vitae? Nisi officia fuga non eveniet deleniti!</p>
                    <i class="text-primary fa-solid right-arrow fa-caret-right"></i>
                    <img class="ms-2" src="~/images/ChatImages/WhatsApp Image 2022-08-01 at 8.13.54 PM.jpeg" alt="">
                </div>
                <div class="message d-flex align-items-center justify-content-start">
                    <img class="me-4" src="~/images/ChatImages/WhatsApp Image 2022-08-01 at 8.13.54 PM.jpeg" alt="">
                    <i class="text-secondary fa-solid right-arrow fa-caret-left"></i>
                    <p class="message-shape ms-3 bg-secondary text-white p-2">How Can we help? We're here for you!</p>
                </div>
            </div>

        </div>
    </div>
    </div>
</div>